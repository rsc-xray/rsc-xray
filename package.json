{
  "name": "rsc-xray-oss",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "vercel:dry:demo": "bash -lc 'cd examples/demo && pnpm install --ignore-workspace --frozen-lockfile && pnpm build'",
    "test": "pnpm -r test",
    "lint": "pnpm exec eslint \"packages/**/src/**/*.{ts,tsx,js}\" \"examples/next-app/app/**/*.{ts,tsx,js}\"",
    "format": "pnpm exec prettier --write .",
    "format:check": "pnpm exec prettier --check .",
    "postinstall": "husky || true",
    "changeset": "changeset",
    "version:packages": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.35.0",
    "@types/node": "^20.17.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tsx": "4.16.1",
    "typescript": "5.6.2",
    "typescript-eslint": "^8.44.0",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write",
    "*.{ts,tsx,js,jsx}": "eslint --max-warnings=0"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.0"
  }
}
