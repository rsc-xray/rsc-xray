{
  "name": "@rsc-xray/lsp-server",
  "version": "0.2.1",
  "description": "LSP server for RSC X-Ray analyzer (OSS version)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest --run",
    "lint": "eslint src",
    "format": "prettier --write src",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@rsc-xray/analyzer": "workspace:*",
    "@rsc-xray/schemas": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "server-components",
    "rsc",
    "next.js",
    "analyzer",
    "lsp",
    "language-server"
  ],
  "author": "RSC X-Ray",
  "license": "MIT"
}
