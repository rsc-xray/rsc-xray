{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@rsc-xray/schemas": ["packages/schemas/src/index.ts"],
      "@rsc-xray/analyzer": ["packages/analyzer/src/index.ts"],
      "@rsc-xray/cli": ["packages/cli/src/index.ts"],
      "@rsc-xray/report-html": ["packages/report-html/src/index.ts"],
      "@rsc-xray/hydration": ["packages/hydration/src/index.ts"]
    }
  }
}
